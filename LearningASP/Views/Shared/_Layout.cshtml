<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link href="~/CSS/site.css" rel="stylesheet" />


    <script src="https://ajax.aspnetcdn.com/ajax/jQuery/jquery-3.3.1.min.js"></script>
</head>
<body>
    <header>
        <h1>Lexicon</h1>
        <nav>
            <ol>
                <li>
                    @Html.ActionLink("Home", "Index", "Home")
                </li>
                <li>
                    @*  @Html.ActionLink("Core", "Core")*@
                    <a asp-controller="Home" asp-action="Core">Core</a>
                </li>
                <li>
                    <a asp-controller="Home" asp-action="Swing">Golf Swing</a>
                </li>
                <li>
                    <a asp-controller="Bakery" asp-action="Index">Bakery</a>
                </li>
                <li>
                    <a asp-controller="ToDoMemo" asp-action="MakeToDo">ToDo Session</a>
                </li>
            </ol>
        </nav>
    </header>
    <div>
        @RenderBody()
    </div>
    <div>
        <a id="aUpdate" asp-controller="Bakery" asp-action="AJAXPartialExample" asp-route-id="0" data-target="environment-container"> Update</a>
        <div id="environment-container"></div> @*ajax smotret data-target*@
    </div>
    <footer>
        <p>Made by: Alhazur &copy;</p>
    </footer>
    <script>//Jquery
        $("#aUpdate").click(function (e) {
            e.preventDefault();
            var _this = $(this);
            $.get(_this.attr("href"), function (res) {
                $('#' + _this.data("target")).html(res);
            });
        });
    </script>
</body>
</html>
